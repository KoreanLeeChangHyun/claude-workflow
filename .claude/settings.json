{
  "statusLine": {
    "type": "command",
    "command": "python3 -u .claude/scripts/statusline.py"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|compact",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/scripts/workflow/history_sync.py sync",
            "timeout": 30,
            "async": true
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/scripts/workflow/history_sync.py sync",
            "timeout": 30,
            "async": true,
            "statusMessage": "히스토리 동기화 (SessionEnd)"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use/hooks-self-guard.py",
            "statusMessage": "hooks 자기보호 검사 중..."
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use/slack-ask.py",
            "async": true,
            "statusMessage": "Slack 알림 전송 중..."
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use/dangerous-command-guard.py",
            "statusMessage": "위험 명령어 검사 중..."
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use/tdd-guard.py",
            "statusMessage": "TDD 가드 검사 중..."
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use/workflow-transition-guard.py",
            "statusMessage": "워크플로우 전이 검증 중..."
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use/workflow-agent-guard.py",
            "statusMessage": "워크플로우 에이전트 검증 중..."
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use/task-history-sync.py",
            "async": true,
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/stop/workflow-auto-continue.py",
            "timeout": 30,
            "statusMessage": "워크플로우 계속 여부 확인"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/subagent-stop/usage-tracker.py",
            "async": true,
            "timeout": 30,
            "statusMessage": "사용량 추적"
          }
        ]
      }
    ]
  }
}
