{
  "statusLine": {
    "type": "command",
    "command": "python3 -u .claude/scripts/statusline.py"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|compact",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/scripts/workflow/history_sync.py sync",
            "timeout": 30,
            "async": true
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/scripts/workflow/history_sync.py sync",
            "timeout": 30,
            "async": true,
            "statusMessage": "히스토리 동기화 (SessionEnd)"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/pre-tool-use.py",
            "statusMessage": "pre-tool-use 디스패처 실행 중..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/stop.py",
            "timeout": 30,
            "statusMessage": "stop 디스패처 실행 중..."
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -u .claude/hooks/subagent-stop.py",
            "timeout": 30,
            "statusMessage": "subagent-stop 디스패처 실행 중..."
          }
        ]
      }
    ]
  }
}
