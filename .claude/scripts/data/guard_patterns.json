    "\\bcp\\b",
    "\\bmv\\b",
    "echo\\s.*>\\s*",
    "echo\\s.*>>\\s*",
    "printf\\s.*>\\s*",
    "printf\\s.*>>\\s*",
    "\\btee\\b",
    "cat\\s.*>\\s*",
    "cat\\s.*>>\\s*",
    "\\bdd\\b",
    "\\binstall\\b",
    "\\brsync\\b",
    "\\bchmod\\b",
    "\\bchown\\b",
    "ln\\s+-sf?\\b",
    "rm\\s+-rf?\\b",
    "rm\\s+-f\\b",
    "\\btouch\\b",
    "\\bmkdir\\b",
    "\\brmdir\\b",
    ">\\s*\\S",
    ">>\\s*\\S"
  ],
  "protected_path_patterns": [
