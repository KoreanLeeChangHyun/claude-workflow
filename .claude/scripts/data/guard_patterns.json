{
  "readonly_patterns": [
    "^\\s*git\\s",
    "^\\s*python3?\\s",
    "^\\s*node\\s",
    "^\\s*cat\\s",
    "^\\s*ls\\b",
    "^\\s*head\\s",
    "^\\s*tail\\s",
    "^\\s*wc\\s",
    "^\\s*grep\\s",
